@{
    ViewData["Title"] = "FeatureList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model List<Feature>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<div class="bg-white px-3 py-2 rounded shadow">
    <div class="row my-2">
        <div class="col-12">
            <strong>Özellikler Listsi:</strong>
            <a data-bs-toggle="modal" data-bs-target="#poz" class="btn btn-primary float-end">New Category</a>
        </div>
    </div>

    <hr />
    <div class="table-responsive ">
        <table class="table">
            <thead>
                <tr>
                    <th>Özellik Adı Name</th>
                    <th>Özellik Değeri</th>
                    <th>İşlem</th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FeatureName</td>
                        <td>@item.FeatureValu</td>

                        <td>
                            <a href="#" data-bs-toggle="modal" data-bs-target="#poz_@item.Id">indirim</a>
                            <!-- Modal -->
                        <div class="modal fade" id="poz_@item.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <form action="/Administrator/ApplyDiscount" method="post">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <div class="modal-content">
                                            <div class="modal-header bg-success">
                                                <h5 class="modal-title text-white" id="exampleModalLabel">İndirim</h5>
                                                <a class="fa fa-times" onclick="hidModal()" data-bs-dismiss="modal" aria-label="Close"></a>

                                            </div>
                                            <div class="modal-body">
                                                <div class="form-check">
                                                    <br />
                                                    <input class="form-check-input" name="isDiscount" type="checkbox" id="flexCheckDefault">
                                                    <label class="form-check-label" for="flexCheckDefault">
                                                        Bu Özellik İndirimde mi (indirimde ise işaretle)
                                                    </label>
                                                </div>
                                                <label class="form-label">indirim Miktarı (%) <span class="text-danger">*</span></label>
                                                <input type="number" class="form-control" value="@item.DicountRate" name="discount" required />
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                <button type="submit" class="btn btn-success">Save</button>
                                            </div>
                                        </div>
                                    </form>

                                </div>
                            </div>
                            <!--  Modal -->

                    </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

